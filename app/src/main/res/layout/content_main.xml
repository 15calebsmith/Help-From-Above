<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.helpfromabove.helpfromabove.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/uas_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/uas_image_view_description"
        android:minHeight="250dp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_green_light" />

    <!--<GridLayout-->
        <!--android:id="@+id/command_grid_layout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="8dp"-->
        <!--android:animateLayoutChanges="true"-->
        <!--android:columnCount="3"-->
        <!--android:rowCount="2"-->
        <!--android:rowOrderPreserved="true"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/uas_image_view"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginEnd="8dp">-->

        <Button
            android:id="@+id/emergency_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:minWidth="110dp"
            android:onClick="emergencyButtonOnClick"
            android:text="@string/emergency_button_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uas_image_view"
            app:layout_constraintRight_toLeftOf="@+id/uas_height_up_button"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/uas_height_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:minWidth="110dp"
            android:onClick="uasHeightUpButtonOnClick"
            android:text="@string/uas_height_up_botton_text"
            app:layout_constraintRight_toLeftOf="@+id/session_start_button"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uas_image_view" />

        <Button
            android:id="@+id/session_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:minWidth="110dp"
            android:onClick="sessionStartButtonOnCLick"
            android:text="@string/session_start_button_text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/uas_image_view"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/uas_height_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:minWidth="110dp"
            android:onClick="uasHeightDownOnClick"
            android:text="@string/uas_height_down_button_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uas_height_up_button"
            app:layout_constraintRight_toLeftOf="@+id/session_end_button"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/session_end_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:minWidth="110dp"
            android:onClick="sessionEndButtonOnCLick"
            android:text="@string/session_end_button_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/session_start_button"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:minWidth="110dp"
            android:onClick="lightSwitchOnClick"
            android:padding="14dp"
            android:text="@string/light_switch_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            tools:checked="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emergency_button"
            app:layout_constraintRight_toLeftOf="@+id/uas_height_down_button"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    <!--</GridLayout>-->

</android.support.constraint.ConstraintLayout>
